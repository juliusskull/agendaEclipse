<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ly_notificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <ImageView
                android:id="@+id/img_notificacion_ppal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/notificaciones" />

            <TextView
                android:id="@+id/txt_notificacion_ppal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/img_notificacion_ppal"
                android:text="@string/notificaciones_del_sistema" />

        </RelativeLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart2"
            android:layout_width="match_parent"
            android:layout_height="224dp" >
        </com.github.mikephil.charting.charts.PieChart>

        <ListView
            android:id="@+id/listPrincipal"
            android:layout_width="match_parent"
            android:layout_height="423dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" >
        </ListView>

    </LinearLayout>
    

</ScrollView>
